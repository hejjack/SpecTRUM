    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run NEIMS preprocessing",
            "type": "debugpy",
            "request": "launch",
            "program": "clean_paper/deep-molecular-massspec/make_train_test_split.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "TARGET_PATH_NAME": "tmp/massspec_predictions",
            },
            "args": [
                "--main_sdf_name", "../data/nist/neims_training_data/train_main_neims.sdf",
                "--replicates_sdf_name", "../data/nist/neims_training_data/train_replicates_neims.sdf",
                "--output_master_dir", "$TARGET_PATH_NAME/spectra_tf_records",
            ]
        },
        {
            "name": "Run finetuning",
            "type": "debugpy",
            "request": "launch",
            "program": "train_bart.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "1",
                "CUDA_LAUNCH_BLOCKING": "1",
            },
            "args": [
                "--config-file", "configs/train_config_finetune_selfies_DEBUG.yaml",
                "--additional-info", "_from_scratch_selfies",
                "--wandb-group", "debug",
                "--additional-tags", "'A100:alfa:selfies'"
            ]
        },
        {
            "name": "Run rassp preprocessing",
            "type": "debugpy",
            "request": "launch",
            "program": "data/msp_preprocess_rassp.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${PYTHONPATH}:/home/xhajek9/gc-ms_bart:/home/xhajek9/gc-ms_bart/bart_spektro"
            },
            "args": [
                "--input-dir ../data/datasets/4_8M/rassp_gen/msps",
                "--output-dir ../data/datasets/4_8M/rassp_gen",
                "--do-preprocess False",
                "--num-processes 32",
                "--concat"
            ]
        },
        {
            "name": "Run pretraining",
            "type": "debugpy",
            "request": "launch",
            "program": "train_bart.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "1",
                "CUDA_LAUNCH_BLOCKING": "1",
            },
            "args": [
                "--config-file", "../configs/train_config_pretrain_rassp.yaml",
                "--additional-info", "_rassp_scratch",
                "--wandb-group", "debug",
                "--additional-tags", "'A100:alfa:RASSP'"
            ]
        },
        {
            "name": "Run evaluation",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_predictions.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
            },
            "args": [
                "--predictions-path", "../predictions/stoic-aardvark-387_rassp1_neims1_112kPretrain_mf10/NIST/1710945663_valid_full_beam10/predictions.jsonl",
                "--labels-path", "../data/datasets/NIST/NIST_split_filip/db_index/valid_with_db_index.jsonl",
                "--config-file", "../configs/eval_config.yaml"
            ]
        },
    ]
}